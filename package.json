{
  "name": "docker-verb",
  "version": "0.2.0",
  "description": "Run verb on Docker.",
  "repository": "git@github.com:stefanwalther/docker-verb.git",
  "author": "Stefan Walther",
  "license": "MIT",
  "scripts": {
    "docs": "docker run -v ${PWD}:/opt/verb stefanwalther/verb",
    "d-build": "docker build -t stefanwalther/verb .",
    "d-run": "docker run -v ${PWD}/test/fixtures:/workspace -t -it stefanwalther/verb /bin/bash",
    "test": "cd test && sh test.sh"
  },
  "verb": {
    "run": true,
    "toc": true,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": [ ]
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
    ]
  }
}
